<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tanya123.project2k17.Todo_open">

    <GridLayout
        android:layout_width="368dp"
        android:layout_height="465dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints"
        android:id="@+id/gridLayout2">

        <LinearLayout
            android:layout_column="0"
            android:layout_row="0"
            android:layout_height="232.5dp"
            android:layout_width="184dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="URGENT AND IMPORTANT"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/UAI"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="184dp"
            android:layout_height="232.5dp"
            android:layout_column="1"
            android:layout_row="0"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NOT URGENT AND IMPORTANT"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/NUAI"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_column="0"
            android:layout_row="1"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="0dp"
            android:layout_width="184dp"
            android:layout_height="232.5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="URGENT AND NOT IMPORTANT"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/UANI"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_column="1"
            android:layout_row="1"
            android:layout_width="184dp"
            android:layout_height="232.5dp"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="0dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NOT URGENT AND NOT IMPORTANT"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/NUANI"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>



    </GridLayout>

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:id="@+id/tododelete"
        android:text="DELETE"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="473dp"
        android:layout_below="@+id/gridLayout2"
        android:layout_alignRight="@+id/gridLayout2"
        android:layout_alignEnd="@+id/gridLayout2"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignBaseline="@+id/tododelete"
        android:layout_alignBottom="@+id/tododelete"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Press the Text to EDIT"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="480dp" />
</RelativeLayout>

